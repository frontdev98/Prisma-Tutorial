generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int       @id @default(autoincrement()) // Primary key
  title       String // String field (can't be null)
  description String? // String field optional (may be null)
  comments    Comment[]
}

model Comment {
  id      Int    @id @default(autoincrement()) // Primary key
  content String

  post   Post? @relation(fields: [postId], references: [id])
  postId Int?
}
